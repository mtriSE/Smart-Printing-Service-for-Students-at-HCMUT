<div id="form-wrapper" class="container-fluid d-flex justify-content-center ">
    <form class="mt-5 col-md-3 col-sm-auto p-5" action="/auth/login" method="POST">
        <h3 class="mb-3">Đăng nhập</h3>

        <h4 id="notification" class="mb-3 mt-3">
            <%= noti %>
        </h4>

        <!-- Tai khoan -->
        <div class="mb-4 row">
            <input type="text" class="mt-3 form-control lh-lg" id="bknetid" name="bknetid" placeholder="BKnetID"
                required>
        </div>

        <!-- Mat khau -->
        <div class="mb-4 row">
            <input type="password" class="mt-3 form-control lh-lg " id="password" name="pwd" placeholder="Mật khẩu"
                required>
        </div>


        <!-- Lua chon quyen -->
        <div class="dropdown mb-4 row">
            <a id="priviledge" class="mt-3 btn btn-light dropdown-toggle text-start lh-lg" href="#" role="button"
                data-bs-toggle="dropdown">
                Bạn là ?
            </a>
            <input type="text" class="d-none " id="priviledge" name="priviledge">
            <ul class="dropdown-menu px-2 ">
                <li class="dropdown-item text-wrap " onclick="editPriviledge('Sinh viên')">Sinh viên</li>
                <li class="dropdown-item text-wrap" onclick="editPriviledge('Cán bộ quản lý (SPSO)')">Cán bộ quản lý
                    (SPSO)</li>
            </ul>
        </div>
        <div class="d-block" style="height: 80px;"></div>
        <div class="row">
            <div class="d-flex p-0 justify-content-between ">
                <button type="submit" class="btn btn-light">Quên mật khẩu</button>
                <button id="submit" type="submit" class="btn btn-primary" disabled>Submit</button>
            </div>
        </div>
    </form>
</div>